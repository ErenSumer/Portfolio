---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Not Found! | Portfolio">
  <nav class="flex items-center justify-between flex-wrap bg-gray-900 p-6">
    <div
      class="flex items-center justify-between flex-shrink-0 text-white ml-10"
    >
      <a href="/"
        ><span class="font-semibold text-xl tracking-tight">Back</span></a
      >
    </div>
  </nav>
  <div class="flex flex-col justify-center items-center">
    <div class="text-center">
      <h1 class="text-9xl font-bold mb-4 animate__animated animate__fadeInDown">
        404
      </h1>
      <h2
        class="text-4xl font-bold mb-8 animate__animated animate__fadeInUp animate__delay-1s"
      >
        Page Not Found
      </h2>
      <p
        class="text-lg mb-8 animate__animated animate__fadeInUp animate__delay-2s"
      >
        The page you're looking for doesn't exist or has been removed.
      </p>
      <a
        href="/"
        class="inline-block bg-green-500 text-white py-3 px-6 rounded-lg animate__animated animate__fadeInUp animate__delay-3s hover:bg-green-600 transition-colors duration-300"
        >Go Back Home</a
      >
    </div>
  </div>

  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  ></script>
  <script>
    // Add a random glitch effect to the 404 text
    const glitchText = document.querySelector("h1");
    const glitchChars = "0123456789@#$%^&*()_+~\\|]}[{'\";:/?.>,<";

    function glitchEffect() {
      let glitchText = "";
      for (let i = 0; i < 3; i++) {
        glitchText += "404"
          .split("")
          .map((char) => {
            if (Math.random() < 0.5) {
              return glitchChars.charAt(
                Math.floor(Math.random() * glitchChars.length)
              );
            } else {
              return char;
            }
          })
          .join("");
      }
      return glitchText;
    }

    if (glitchText) {
      setInterval(() => {
        glitchText.textContent = glitchEffect();
      }, 100);
    }
  </script>
</Layout>
